{% extends 'base.html.twig' %}

{% block title %}Condo{% endblock %}

{% block body %}
    <h1>Condo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ condo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ condo.name }}</td>
            </tr>
            <tr>
                <th>TaxCode</th>
                <td>{{ condo.taxCode }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ condo.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedOn</th>
                <td>{{ condo.createdOn ? condo.createdOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_condo_index') }}">back to list</a>

    <a href="{{ path('app_condo_edit', {'id': condo.id}) }}">edit</a>

    {{ include('condo/_delete_form.html.twig') }}
{% endblock %}
